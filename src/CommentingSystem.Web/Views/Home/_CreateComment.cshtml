@model CreateCommentDto

<form method="post" asp-action="CreateComment" asp-controller="Home" enctype="multipart/form-data">

	<div class="row mb-2">

		<div class="form-group col">
			<input type="file" class="form-control" accept=".jpg, .gif, .png" asp-for="Image" />
			<span asp-validation-for="Image" class="text-danger"></span>
		</div>

        <div class="col">
            <div class="form-floating">
                <input asp-for="FullName" class="form-control" placeholder=" " />
                <label asp-for="FullName"></label>
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
        </div>

        <div class="col">
            <div class="form-floating">
                <input asp-for="Email" class="form-control" placeholder=" " />
                <label asp-for="Email"></label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
    </div>

	<div class="card border-primary">
		<div class="row mb-2">
			<div class="col">
				<div class="form-floating">
					<textarea asp-for="Message" class="form-control" placeholder="Leave a comment here"></textarea>
					<label asp-for="Message"></label>
					<span asp-validation-for="Message" class="text-danger"></span>
				</div>
			</div>
		</div>
		<input type="file" id="file" class="form-control" accept=".txt" asp-for="dowloadedFile" style="width:20%" />
	</div>

    


	<div class="row mb-2">
		<div class="col">
			<div class="form-floating">
				<textarea asp-for="HomePage" class="form-control" placeholder="Leave a comment here"></textarea>
				<label asp-for="HomePage"></label>
				<span asp-validation-for="HomePage" class="text-danger"></span>
			</div>
		</div>
	</div>

	<recaptcha />

    <div class="row">
        <div class="col form-group">
            <input type="submit" class="btn btn-success" />
        </div>
    </div>
</form>

